{
  "name": "openquester_api",
  "version": "0.10.0",
  "description": "",
  "scripts": {
    "start:dev:run": "wait-on ./dist/index.js && nodemon ./dist/index.js",
    "start:dev": "npm run clean && npm run checks:dev && concurrently npm:build:dev npm:start:dev:run",
    "start:prod": "node ./dist/index.js",
    "checks:dev": "npm run validate:schema && npm run lint",
    "validate:schema": "node ./scripts/schema/validateSchema.mjs",
    "clean": "rm -rf dist/*",
    "build:dev": "tsup --watch",
    "build": "tsup",
    "test": "cross-env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha",
    "test:dev": "nyc npm run test",
    "lint": "eslint ./"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "overrides": {
    "eslint": "^9.8.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.744.0",
    "@aws-sdk/s3-request-presigner": "^3.744.0",
    "@seriousme/openapi-schema-validator": "^2.2.1",
    "bcryptjs": "^2.4.3",
    "colorette": "^2.0.20",
    "connect-redis": "^8.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.1",
    "nodemon": "^3.1.4",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.0",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0",
    "typescript": "^5.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@swc/core": "^1.7.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-signature": "^1.1.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.1",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/minio": "^7.1.0",
    "@types/node": "^22.0.0",
    "@types/socket.io": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.8.0",
    "globals": "^15.9.0",
    "nyc": "^17.0.0",
    "ts-node": "^10.9.2",
    "ts-prune": "^0.10.3",
    "tsup": "^8.0.2",
    "typescript-eslint": "^8.0.1",
    "wait-on": "^7.2.0"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
